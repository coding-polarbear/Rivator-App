        <activity android:name=".controller.activitys.StudentSignUpActivity" />
        <activity
            android:name=".controller.activitys.HomeActivity"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".controller.activitys.NoticeActivity"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".controller.activitys.HomeWorkActivity"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".controller.activitys.ProjectActivity"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".controller.activitys.CourseManagementActivity"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".controller.activitys.ContestManagementActivity"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".controller.activitys.CalendarActivity"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity android:name=".controller.activitys.LoginActivity" />
        <activity
            android:name=".controller.activitys.ProjectDetailActivity"
