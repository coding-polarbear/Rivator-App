            android:name=".controller.activitys.EasterEggActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name=".controller.activitys.CourseDetailActivity"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity android:name=".controller.activitys.ProjectAddActivity" />
        <activity android:name=".controller.activitys.CourseAddActivity" />
        <activity android:name=".controller.activitys.ContestAddActivity" />
        <activity
            android:name=".controller.activitys.ContestDetailActivity"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity android:name=".controller.activitys.CourseReviewDetailActivity" />
        <activity android:name=".controller.activitys.CourseReviewWriteActivity"></activity>
        <activity android:name=".controller.activitys.SearchViewActivity"/>
        <activity android:name=".controller.activitys.TeacherProfileActivity"
            android:theme="@style/AppTheme.ActionBar.Transparent"/>
