<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical"
    tools:context="com.rinc.bong.rivatorproject.StudentSignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/student"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="35dp"
                android:id="@+id/imageView"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="7dp" />

            <EditText
                android:id="@+id/editId"
                android:layout_width="312dp"
                android:layout_height="48dp"
                android:layout_below="@+id/imageView"
                android:layout_marginBottom="2dp"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:background="@color/colorWhiteText"
                android:inputType="textPersonName"
                android:hint="  아이디" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="312dp"
                android:layout_height="48dp"
                android:layout_marginBottom="2dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/editId"
                android:ems="10"
                android:background="@color/colorWhiteText"
                android:inputType="textPersonName"
                android:hint="  비밀번호" />

            <EditText
                android:layout_width="312dp"
                android:layout_height="48dp"
                android:background="@color/colorWhiteText"
                android:hint="  비밀번호 재확인"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/editPassword"
                android:layout_centerHorizontal="true"
                android:id="@+id/editPassword2" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="312dp"
                android:layout_height="48dp"
                android:layout_below="@+id/editPassword2"
                android:layout_centerHorizontal="true"
                android:background="@color/colorWhiteText"
                android:hint="  이름"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp" />
            <EditText
                android:layout_width="312dp"
                android:layout_height="48dp"
                android:background="@color/colorWhiteText"
                android:layout_below="@+id/editName"
                android:layout_centerHorizontal="true"
                android:hint="  전화번호"
                android:id="@+id/editPhoneNumber"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp" />
            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@+id/editPhoneNumber"
                android:background="#cfcfcf"
                android:textAlignment="center"
                android:layout_marginBottom="2dp"
                android:text="\n지역"
                android:id="@+id/textView5"
                android:layout_alignStart="@+id/editPassword" />

            <Spinner
                android:id="@+id/citySpinner"
                android:layout_width="86dp"
                android:layout_height="48dp"
                android:layout_below="@+id/editPhoneNumber"
                android:layout_toRightOf="@+id/textView5"
                android:background="@color/colorWhiteText"
                android:layout_marginLeft="2dp" />
            <Spinner
                android:id="@+id/districSpinner"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:layout_toRightOf="@+id/citySpinner"
                android:layout_below="@+id/editPhoneNumber"
                android:background="@color/colorWhiteText"
                android:layout_marginLeft="2dp" />

            <Spinner
                android:id="@+id/townSpinner"
                android:layout_width="86dp"
                android:layout_height="48dp"
                android:layout_toRightOf="@+id/districSpinner"
                android:layout_below="@+id/editPhoneNumber"
                android:background="@color/colorWhiteText"
                android:layout_marginLeft="2dp" />
            <TextView
                android:layout_width="72dp"
                android:layout_height="48dp"
                android:background="#cfcfcf"
                android:text="\n관심과목"
                android:layout_alignStart="@+id/textView5"
                android:textAlignment="center"
                android:layout_below="@+id/textView5"
                android:id="@+id/textView6" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="242dp"
                android:layout_height="48dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorWhiteText"
                android:layout_below="@+id/citySpinner"
                android:layout_toRightOf="@+id/textView6"/>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="약관동의"
                android:layout_alignStart="@+id/textView6"
                android:layout_below="@+id/textView6"/>
        </RelativeLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#dfdfdf"
            android:onClick="back"
            android:text="이전으로"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="next"
            android:layout_weight="1"
            android:background="#14e4a2"
            android:text="다음으로" />
    </LinearLayout>
</LinearLayout>
