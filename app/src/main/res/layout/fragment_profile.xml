<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenBar"
    android:orientation="vertical"
    tools:context="com.rinc.bong.rivatorproject.fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:id="@+id/profile"
            android:src="@drawable/student"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/name"
            android:letterSpacing="-0.09"
            android:layout_marginTop="21dp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorWhiteText"
            android:text="김철수"
            android:layout_below="@+id/profile"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="83dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/name"
            android:textColor="@color/colorWhiteText"
            android:letterSpacing="-0.09"
            android:textSize="14sp"
            android:text="웹프로그래밍" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0"
        android:paddingTop="20dp"
        android:paddingBottom="28dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonGroup1"
            android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="계정설정"
                android:id="@+id/profile_modify_btn"
                android:background="@drawable/profile_button_style"
                android:layout_gravity="bottom"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/profile_notice_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="알림"
                android:layout_gravity="bottom"
                android:background="@drawable/profile_button_style"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/profile_course_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="강좌관리"
                android:layout_gravity="bottom"
                android:background="@drawable/profile_button_style"
                android:layout_weight="1" />

            <Button
                android:id="@+id/profile_homework_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="숙제관리"
                android:layout_gravity="bottom"
                android:background="@drawable/profile_button_style"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/profile_contest_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="콘테스트"
                android:layout_gravity="bottom"
                android:background="@drawable/profile_button_style"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/profile_project_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:text="프로젝트"
                android:background="@drawable/profile_button_style"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="고객센터"
                android:layout_gravity="bottom"
                android:background="@drawable/profile_button_style"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="앱 정보"
                android:layout_gravity="bottom"
                android:background="@drawable/profile_button_style"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>