<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenBar"
    android:orientation="vertical"
    tools:context="com.rinc.bong.rivatorproject.controller.fragments.ProfileFragment">

    <!-- TODO: Update blank courseReviewFragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:id="@+id/profile"
            android:src="@drawable/student"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/name"
            android:letterSpacing="-0.09"
            android:layout_marginTop="21dp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorWhiteText"
            android:text="김철수"
            android:layout_below="@+id/profile"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="83dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/name"
            android:id="@+id/subject"
            android:textColor="@color/colorWhiteText"
            android:letterSpacing="-0.09"
            android:textSize="14sp"
            android:text="웹프로그래밍" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#f0f0f0"
        android:orientation="vertical"
        android:paddingBottom="28dp"
        android:paddingTop="20dp">

        <LinearLayout
            android:id="@+id/buttonGroup1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profile_modify_btn"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/profile_button_style">

                <ImageView
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profileedit"
                    android:layout_weight="3"/>

                <TextView
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_weight="7"
                    android:adjustViewBounds="true"
                    android:text="계정설정" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profile_notice_btn"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/profile_button_style">

                <ImageView
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/noticeview"
                    android:layout_weight="3"/>

                <TextView
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_weight="7"
                    android:adjustViewBounds="true"
                    android:text="알림" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profile_course_btn"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/profile_button_style">

                <ImageView
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rectureadmin"
                    android:layout_weight="3"/>

                <TextView
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_weight="7"
                    android:adjustViewBounds="true"
                    android:text="강좌관리" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profile_homework_btn"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/profile_button_style">

                <ImageView
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/homeworkadmin"
                    android:layout_weight="3"/>

                <TextView
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_weight="7"
                    android:adjustViewBounds="true"
                    android:text="숙제관리" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profile_contest_btn"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/profile_button_style">

                <ImageView
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/contest"
                    android:layout_weight="3"/>

                <TextView
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_weight="7"
                    android:adjustViewBounds="true"
                    android:text="콘테스트" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profile_project_btn"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/profile_button_style">

                <ImageView
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/project"
                    android:layout_weight="3"/>

                <TextView
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_weight="7"
                    android:adjustViewBounds="true"
                    android:text="프로젝트" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profile_customer_btn"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/profile_button_style">

                <ImageView
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/customer"
                    android:layout_weight="3"/>

                <TextView
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_weight="7"
                    android:adjustViewBounds="true"
                    android:text="고객센터" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profile_appinfo_btn"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/profile_button_style">

                <ImageView
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/appinfo"
                    android:layout_weight="3"/>

                <TextView
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_weight="7"
                    android:adjustViewBounds="true"
                    android:text="앱 정보"  />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>