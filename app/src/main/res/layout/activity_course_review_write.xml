<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenBar"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.rinc.bong.rivatorproject.controller.activitys.CourseDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:layout_weight="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/imageView"
            android:background="@android:color/darker_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhiteText"
            android:id="@+id/titleLayout"
            android:layout_below="@+id/imageView">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="웹 프로그래밍 기초"
                android:id="@+id/title"
                android:textSize="24sp"
                android:textColor="#343434"
                android:letterSpacing="-0.05"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginLeft="@dimen/notice_item_left_margin"
                android:letterSpacing="-0.1"
                android:text="HTML"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dot1"
                android:layout_below="@+id/title"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@+id/category"
                android:letterSpacing="-0.1"
                android:text=" ∙ "
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/unitTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_toRightOf="@+id/dot1"
                android:letterSpacing="-0.1"
                android:text="총 124시간"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorWhiteText"
            android:id="@+id/teacherProfile"
            android:layout_below="@+id/titleLayout">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/teacherProfileImage"
                android:background="@drawable/teacher"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김철수"
                android:id="@+id/teacherName"
                android:textColor="#121212"
                android:letterSpacing="-0.01"
                android:layout_toRightOf="@+id/teacherProfileImage"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="13dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/teacherName"
                android:layout_toRightOf="@+id/teacherProfileImage"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:text="웹프로그래밍"
                android:textSize="12sp"
                android:letterSpacing="-0.01"
                android:id="@+id/subject"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#f0f0f0"
            android:layout_below="@+id/teacherProfile"
            android:id="@+id/line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhiteText"
            android:layout_below="@+id/line">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:id="@+id/scoreText"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="5dp"
                android:text="평점"/>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:numStars="5"
                android:stepSize="0.5"
                android:id="@+id/ratingBar"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ratingBar"
                android:background="@color/colorWhiteText"
                android:hint="컨텐츠"
                android:id="@+id/content"
                android:gravity="start"
                android:inputType="textMultiLine"
                android:padding="16dp"/>
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorMainGreen"
            android:text="등록하기"
            android:id="@+id/submit"
            android:onClick="submit"
            android:letterSpacing="-0.05"
            android:textSize="16sp"
            android:textColor="@color/colorWhiteText"
            />
    </LinearLayout>
</LinearLayout>
