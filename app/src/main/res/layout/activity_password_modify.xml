<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.rinc.bong.rivatorproject.activitys.PasswordModifyActivity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/colorWhiteText"
        android:hint="패스워드"
        android:ems="10"
        android:id="@+id/password1"
        android:paddingLeft="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/colorWhiteText"
        android:layout_below="@+id/password1"
        android:hint="패스워드 재확인"
        android:ems="10"
        android:id="@+id/password2"
        android:paddingLeft="10dp"/>
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorMainGreen"
        android:layout_alignParentBottom="true"
        android:onClick="modifyPassword"
        android:text="비밀번호 수정"
        android:textColor="@color/colorWhiteText"/>
</RelativeLayout>
