<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="64dp"
    android:layout_width="match_parent"
    android:minHeight="64dp"
    android:background="@color/colorPrimary"
    >
    <TextView
        android:layout_marginTop="10.5dp"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#14e4a2"
        android:letterSpacing="-0.06"
        android:text="C#"
        android:id="@+id/teacher_subject"/>
    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10.5dp"
        android:layout_toRightOf="@id/teacher_subject"
        android:id="@+id/teacher_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="16sp"
        android:textColor="#343434"
        android:letterSpacing="-0.06"
        android:text="기초 프로그래밍"
        />
    <TextView
        android:layout_marginLeft="24dp"
        android:layout_below="@+id/teacher_subject"
        android:id="@+id/teacher_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="12sp"
        android:textColor="#787878"
        android:letterSpacing="-0.1"
        android:text="강사명 ・  총 124시간"
        />
    <TextView
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:letterSpacing="-0.09"
        android:text="230,000원"
        android:id="@+id/teacher_price" />
    <View
        android:background="@color/colorItemLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/view3" />

</RelativeLayout>