<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context="com.rinc.bong.rivatorproject.fragments.HomeSubjectFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/subjectText"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/colorWhiteText"
                android:textSize="24sp"
                android:letterSpacing="-0.05"
                android:background="#91edd0"
                android:text="Rivator" />
            <RelativeLayout
                android:id="@+id/block1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subjectText"
                android:background="#FFFFFF">

                <LinearLayout
                    android:id="@+id/textLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/basicText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:letterSpacing="-0.06"
                        android:text="강사리스트"
                        android:textColor="@color/colorDarkText"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/moreText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="21dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:letterSpacing="-0.1"
                        android:textColor="@color/greenBar"
                        android:textSize="12sp" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler1"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_below="@+id/textLayout1"
                    android:padding="8dp"
                    android:scrollbars="horizontal"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/block3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/block1"
                android:layout_marginTop="16dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:id="@+id/textLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/basicText3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:letterSpacing="-0.06"
                        android:text="강사리스트"
                        android:textColor="@color/colorDarkText"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/moreText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="21dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:letterSpacing="-0.1"
                        android:textColor="@color/greenBar"
                        android:textSize="12sp" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler2"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_below="@+id/textLayout3"
                    android:scrollbars="horizontal"></android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>
