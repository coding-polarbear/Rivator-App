<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/colorPrimary"
    android:minHeight="64dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/line"
        android:background="@color/colorItemLine" />
    <TextView
        android:id="@+id/item_course_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginLeft="@dimen/notice_item_left_margin"
        android:layout_marginTop="@dimen/notice_item_top_margin"

        android:letterSpacing="-0.06"
        android:text="Title Message"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
    android:id="@+id/item_course_teacherName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/item_course_title"
    android:layout_marginLeft="@dimen/notice_item_left_margin"
    android:letterSpacing="-0.1"
    android:text="김철수"
    android:textColor="@color/colorTextDefault"
    android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dot1"
        android:layout_below="@+id/item_course_title"
        android:layout_toRightOf="@+id/item_course_teacherName"
        android:letterSpacing="-0.1"
        android:text=" ∙ "
        android:textColor="@color/colorTextDefault"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_course_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_course_title"
        android:layout_toRightOf="@+id/dot1"
        android:letterSpacing="-0.1"
        android:text="IT"
        android:textColor="@color/colorTextDefault"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dot2"
        android:layout_below="@+id/item_course_title"
        android:layout_toRightOf="@+id/item_course_category"
        android:letterSpacing="-0.1"
        android:text=" ∙ "
        android:textColor="@color/colorTextDefault"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_course_unitTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_course_title"
        android:layout_toRightOf="@+id/dot2"
        android:letterSpacing="-0.1"
        android:text="39시간"
        android:textColor="@color/colorTextDefault"
        android:textSize="12sp" />



</RelativeLayout>